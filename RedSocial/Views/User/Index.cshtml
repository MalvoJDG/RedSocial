@using RedSocial.Core.Application.ViewModels.Users
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100 mt-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" asp-controller="User" asp-action="Index">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter a valid email address" />
                        <label asp-for="Email" class="form-label">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter password" />
                        <label asp-for="Password" class="form-label">Password</label>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a asp-controller="User" asp-action="Register" class="link-danger">Register</a></p>
                    </div>
                    <a asp-controller="User" asp-action="ForgotPassword" class="btn btn-warning float-end me-2">Forgot your password?</a>
                </form>
            </div>
        </div>
    </div>
</section>
