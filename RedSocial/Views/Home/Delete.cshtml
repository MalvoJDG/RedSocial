@using RedSocial.Core.Application.ViewModels.Post;
@model SavePostViewModel
@{
    ViewData["Title"] = "Delete Post";
}

<div class="row">

    <div class="col-6 offset-3" >
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Are you sure you want to delete the post?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Home" asp-action="DeletePost">
                
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancelar</a>
                
                </form>

            </div>
        </div>
    </div>

</div>

